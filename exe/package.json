{
  "name": "epic-core",
  "version": "1.0.0",
  "description": "Epic Core - Electron Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "debug": "electron . --inspect=5858",
    "postinstall": "electron-builder install-app-deps",
    "fix-electron": "rimraf node_modules/electron && npm install electron --force",
    "clean:dist": "rimraf dist",
    "build": "npm run clean:dist && electron-builder",
    "build:win": "npm run clean:dist && electron-builder --win",
    "build:mac": "npm run clean:dist && electron-builder --mac",
    "build:linux": "npm run clean:dist && electron-builder --linux",
    "build:nsis": "npm run clean:dist && npx electron-builder --win --config.win.target=nsis"
  },
  "keywords": [
    "electron",
    "epic",
    "core"
  ],
  "author": "qiao",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3",
    "rimraf": "latest"
  },
  "build": {
    "appId": "com.epic.core",
    "productName": "Epic Core",
    "copyright": "Copyright Â© 2026 Xrkseek",
    "directories": {
      "output": "dist",
      "buildResources": "."
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!**/node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*"
    ],
    "win": {
      "executableName": "Epic Core",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Epic Core",
      "deleteAppDataOnUninstall": false
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "removePackageScripts": true,
    "forceCodeSigning": false,
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "icon.ico"
    }
  }
}